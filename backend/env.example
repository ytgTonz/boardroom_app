# Database Configuration
MONGODB_URI=mongodb://localhost:27017/boardroom_booking

# JWT Configuration
JWT_SECRET=your_jwt_secret_here

# Server Configuration
PORT=5000
NODE_ENV=development
CORS_ORIGIN=http://localhost:3000

# Email Configuration (Gmail example - replace with your email service)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password

# ImageKit.io Configuration
IMAGEKIT_PUBLIC_KEY=your_public_key_here
IMAGEKIT_PRIVATE_KEY=your_private_key_here
IMAGEKIT_URL_ENDPOINT=https://ik.imagekit.io/your_imagekit_id

# Error Tracking with Sentry.io
SENTRY_DSN=https://your_sentry_dsn@sentry.io/project_id

# Rate Limiting Configuration (optional - defaults are applied based on NODE_ENV)
# RATE_LIMIT_GENERAL_MAX=1000
# RATE_LIMIT_AUTH_MAX=20
# RATE_LIMIT_BOOKING_MAX=30
# RATE_LIMIT_EMAIL_MAX=10