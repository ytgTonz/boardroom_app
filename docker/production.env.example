# Production Environment Configuration
# Copy this file to .env and update with your production values

# Node.js Environment
NODE_ENV=production
PORT=5000

# Database Configuration
MONGODB_URI=mongodb://mongodb:27017/boardroom_booking
MONGO_ROOT_USERNAME=boardroom_admin
MONGO_ROOT_PASSWORD=your_secure_mongo_password_here

# Security
JWT_SECRET=your_very_secure_jwt_secret_key_minimum_32_characters_long
CORS_ORIGIN=https://your-domain.com

# Email Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your-email@gmail.com
EMAIL_APP_PASSWORD=your_gmail_app_password
EMAIL_FROM=noreply@your-domain.com

# ImageKit Configuration
IMAGEKIT_PUBLIC_KEY=your_imagekit_public_key
IMAGEKIT_PRIVATE_KEY=your_imagekit_private_key
IMAGEKIT_URL_ENDPOINT=https://ik.imagekit.io/your_imagekit_id

# Error Tracking
SENTRY_DSN=https://your_sentry_dsn@sentry.io/project_id

# Rate Limiting (optional - defaults applied based on NODE_ENV)
RATE_LIMIT_GENERAL_MAX=1000
RATE_LIMIT_AUTH_MAX=20
RATE_LIMIT_BOOKING_MAX=30
RATE_LIMIT_EMAIL_MAX=10

# Backup Configuration
BACKUP_DIR=/app/backups
MAX_BACKUPS=7
BACKUP_COMPRESSION=true

# Timezone
TZ=UTC

# Monitoring (optional)
GRAFANA_PASSWORD=your_secure_grafana_password

# Redis Configuration
REDIS_URL=redis://redis:6379

# Logging
LOG_LEVEL=info
LOG_FILE=/app/logs/application.log